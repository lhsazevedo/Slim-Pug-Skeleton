doctype html
html
  head
    meta(charset="utf-8")
    title Slim 3
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Lato:300" type="text/css")
    :css
      body {
        margin: 50px 0 0 0;
        padding: 0;
        width: 100%;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        text-align: center;
        color: #aaa;
        font-size: 18px;
      }

      h1 {
        color: #719e40;
        letter-spacing: -3px;
        font-family: 'Lato', sans-serif;
        font-size: 100px;
        font-weight: 200;
        margin-bottom: 0;
      }
  body
    h1 Slim
    div a microframework for PHP

    if name
      h2 Hello #{name}!
    else
      p Try #[a(href="https://slimframework.com") SlimFramework]
