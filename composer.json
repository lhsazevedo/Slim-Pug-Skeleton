{
    "name": "lhszevedo/slim-pug-skeleton",
    "description": "A Slim Framework skeleton application with Pug support for rapid development",
    "type": "project",
    "keywords": ["microframework", "rest", "router", "psr7", "pug"],
    "homepage": "http://github.com/lhsazevedo/Slim-Pug-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        }, {
            "name": "Lucas Henrique Azevedo",
            "email": "lhs_azevedo@hotmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "pug/slim": "^1.1.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
